{
  "name": "cra-lerna-electron",
  "version": "0.1.0",
  "description": "Create-React-App + Lerna + Electron starter kit.",
  "author": {
    "email": "amaury.martiny@protonmail.com",
    "name": "Amaury Martiny"
  },
  "homepage": "https://github.com/amaurymartiny/cra-lerna-electron",
  "private": true,
  "scripts": {
    "build": "npm-run-all -l build:react build:electron",
    "build:electron": "cd packages/crale-electron && npm run build",
    "build:react": "cd packages/crale-react && npm run build",
    "preelectron": "npm run build",
    "electron": "cd packages/crale-electron && npm run electron",
    "lint": "npm-run-all -l lint:*",
    "lint:electron": "cd packages/crale-electron && npm run lint",
    "lint:react": "cd packages/crale-react && npm run lint",
    "prepackage": "npm run build",
    "package": "cd packages/crale-electron && npm run package",
    "start": "npm-run-all -p -l start:*",
    "start:electron": "cd packages/crale-electron && npm run start",
    "start:react": "cd packages/crale-react && npm run startt",
    "test": "npm-run-all -l test:*",
    "test:electron": "cd packages/crale-electron && npm run test",
    "test:react": "cd packages/crale-react && npm run test -- --coverage"
  },
  "devDependencies": {
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3"
  }
}
